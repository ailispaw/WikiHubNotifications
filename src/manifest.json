{
	"manifest_version" : 2,
	"name"             : "__MSG_my_name__",
	"version"          : "0.1.1",

	"default_locale"   : "en",
	"description"      : "__MSG_my_desc__",
	"icons"            : {
		"16"             : "icons/icon16.png",
		"48"             : "icons/icon48.png",
		"128"            : "icons/icon128.png"
	},

	"browser_action"   : {
		"default_icon"   : "icons/icon19.png",
		"default_title"  : "__MSG_my_name__",
		"default_popup"  : "popup.html"
	},

	"background"       : {
		"scripts"        : [
			"js/jquery-3.0.0.min.js",
			"js/main.js"
		]
	},
	"content_security_policy" : "script-src 'self' https://use.fontawesome.com; object-src 'self'",
	"homepage_url"     : "https://wikihub.io/",
	"incognito"        : "split",
	"minimum_chrome_version" : "51.0",
	"options_page"     : "options.html",
	"permissions"      : [
		"tabs",
		"cookies",
		"https://wikihub.io/*"
	]
}
